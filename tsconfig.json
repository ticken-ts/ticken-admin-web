{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "ES2021",
      "dom"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
